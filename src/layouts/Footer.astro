---
import computePath from "../helpers/compute-path";
---

<footer>
	<div class="row">
		<div class="cumbre">
			<a href="http://gmcumbre.blogspot.com" title="Ir a la web de GM Cumbre Llangréu organizador del evento">
				<svg class="icon cumbre-logo">
					<use xlink:href={computePath(`/svg/map.svg#logo-cumbre`)}></use>
				</svg>
				Cumbre</a>
		</div>
		<ul class="contact">
			<li class="tvs">Trail Valle de Samuño</li>
			<li><a href="mailto:trailvallesamuno@gmail.com" title="Escribir correo a la organización">trailvallesamuno@gmail.com</a></li>
			<li><a href="https://guitarranalon.github.io/siamese-dev/" title="Ir a la web del desarrollador">Web creada por siamese.dev</a></li>
		</ul>
		<div class="social">
			<ul>
				<li class="x"><a href="https://twitter.com/tvallesamuno" title="Ir a la página de X del Trail Valle de Samuño">
					<svg class="icon x">
						<use xlink:href={computePath(`/svg/map.svg#x`)}></use>
					</svg>
					X</a></li>
				<li class="facebook"><a href="https://www.facebook.com/TrailValleSamuno/" title="Ir a la página de Facebook del Trail Valle de Samuño">
					<svg class="icon facebook">
						<use xlink:href={computePath(`/svg/map.svg#facebook`)}></use>
					</svg>
					Facebook</a></li>
				<li class="Instagram"><a href="https://www.instagram.com/trailvalledesamuno/" title="Ir a la página de Instagram del Trail Valle de Samuño">
					<svg class="icon instagram">
						<use xlink:href={computePath(`/svg/map.svg#instagram`)}></use>
					</svg>
					Instagram</a></li>
				<li class="threads"><a href="https://www.threads.net/@trailvalledesamuno?xmt" title="Ir al perfil de Threads del Trail Valle de Samuño">
					<svg class="icon threads">
						<use xlink:href={computePath(`/svg/map.svg#threads`)}></use>
					</svg>
					Threads</a></li>
				<li class="whatsapp"><a href="https://whatsapp.com/channel/0029VaCZSDbE50UbdDeCWi1a" title="Ir al Canal público de Whatsapp del Trail Valle de Samuño">
					<svg class="icon whatsapp">
						<use xlink:href={computePath(`/svg/map.svg#whatsapp`)}></use>
					</svg>
					Whatsapp</a></li>					
			</ul>
		</div>
		
		<ul class="sellos">
			<li class="langreocalidadturistica">
				{ Astro.url.pathname === "/informacion/reconocimientos" && <span>
					<svg class="icon langreocalidadturistica"><use xlink:href={computePath("/svg/map.svg#langreocalidadturistica")}></use></svg>
				</span>
				}
				{
					Astro.url.pathname !== "/informacion/reconocimientos" && <a href="/informacion/reconocimientos#calidadTuristica2019" title="Ir a la sección de Langreo Calidad Turística">
						<svg class="icon langreocalidadturistica"><use xlink:href={computePath("/svg/map.svg#langreocalidadturistica")}></use></svg>
						Langreo calidad turística
					</a>					
				}
			</li>
			<li class="homologacion">
				{ Astro.url.pathname === "/transversales/homologacionFempa" && <span>
					<svg class="icon homologada-fempa"><use xlink:href={computePath("/svg/map.svg#homologacion")}></use></svg>
				</span>
				}
				{
					Astro.url.pathname !== "/transversales/homologacionFempa" && <a href="/transversales/homologacionFempa" title="Ir a la sección de homologación">
						<svg class="icon homologada-fempa"><use xlink:href={computePath("/svg/map.svg#homologacion")}></use></svg>
						Carrera homologada por la Fempa
					</a>					
				}
			</li>
		</ul>
	</div>
</footer>