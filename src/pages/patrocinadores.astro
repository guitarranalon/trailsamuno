---
import Layout from "../layouts/Layout.astro";
import patrocinadores from "../../data/patrocinadores.json";
import colaboradores from "../../data/colaboradores.json";

const title = "Patrocinadores";
---

<Layout title={title}>
	<div id="content-block">
		<h2>Patrocinadores</h2>
		<ul class="patrocinadores">
			{ patrocinadores.empresas.map(empresa => {
				return <li>
					<a href={empresa.link} title={empresa.linktitle}>
						<img src={`images/patrocinadores/${empresa.image}`} alt={empresa.name} />
					</a>
				</li>
			})}
		</ul>

