			<ul class="patrocinadores">
				<% epigrafeoficial.empresas.each do |colaboradoroficial| %>
					<li>
						<% if colaboradoroficial.link.nil? || colaboradoroficial.link.empty? %>
							<span>
								<img src="images/colaboradores/<%= colaboradoroficial.image %>" alt="<%= colaboradoroficial.name %>" />
							</span>
						<% else %>
							<a href="<%= colaboradoroficial.link %>" title="<%= colaboradoroficial.linktitle %>">
