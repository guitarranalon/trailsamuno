---
import Layout from "../layouts/Layout.astro";
import patrocinadores from "../../data/patrocinadores.json";
import colaboradores from "../../data/colaboradores.json";

const title = "Patrocinadores";
const h1 = "Patrocinadores de la carrera";
---

<Layout title={title} h1={h1}>
	<div id="content-block">
		<h2>Patrocinadores</h2>
		<ul class="patrocinadores">
			{ patrocinadores.empresas.map(empresa => {
				return <li>
					<a href={empresa.link} title={empresa.linktitle}>
						<img src={`images/patrocinadores/${empresa.image}`} alt={empresa.name} />
					</a>
				</li>
			})}
		</ul>

		{ colaboradores.oficiales.map(epigrafeoficial => {
			return <h3>{epigrafeoficial.title}</h3>
			<ul class="patrocinadores">
				{ epigrafeoficial.empresas.map(colaboradoroficial => {
					return <li>
						{ !colaboradoroficial.link && <span>
								<img src={`/images/colaboradores/${colaboradoroficial.image}`} alt={colaboradoroficial.name} />
							</span>
						}
						{ colaboradoroficial.link && <a href={colaboradoroficial.link} title={colaboradoroficial.linktitle}>
								<img src={`/images/colaboradores/${colaboradoroficial.image}`} alt={colaboradoroficial.name} />
							</a>
						}
					</li>
				})}
			</ul>
		})}

		<h3>Colaboradores</h3>
		<ul class="patrocinadores">
			{ colaboradores.empresas.map(colaborador => {
				return <li>
					{ !colaborador.link && <span>
							<img src={`/images/colaboradores/${colaborador.image}`} alt={colaborador.name} />
						</span>
					}
					{ colaborador.link && <a href={colaborador.link} title="<%= colaborador.linktitle %>">
							<img src={`/images/colaboradores/${colaborador.image}`} alt={colaborador.name} />
						</a>
					}
				</li>
			})}
		</ul>

		<p>
			Si desea colaborar con un patrocinio en el Trail Valle de Samuño puede ponerse en <a href="contacto.html" title="Ir a la sección de contacto">contacto</a> con nosotros.
		</p>
	</div>
</Layout>